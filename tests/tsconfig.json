{
  "compilerOptions": {
    "outDir": "../build/testBuild",
    "sourceMap": true,
    "module": "umd",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "es5",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "rootDir": "../",
    "lib": ["es2015", "es2015.promise", "dom"]
  },
  "include": [
    "../src/platforms/common/**/*.ts",
    "../src/**/*.ts",
    "../tests/**/*-test.ts"
  ],
  "exclude": [
    "lib",
    "build"
  ]
}
